/* ==========================
   GENERAL
========================== */
.home {
  display: flex;
  flex-direction: column;
  gap: 4rem;
  font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
  color: #1f2937;
  line-height: 1.6;
  background: #f9fafb;
}

/* Un contenedor para que el HERO quede como â€œtarjetaâ€ centrada */
.home-container {
  width: 100%;
  max-width: 1120px;
  margin: 0 auto;
  padding: 0 1rem;
}

/* ==========================
   HERO (como tu captura)
========================== */
.hero {
  position: relative;
  border-radius: 2rem;
  overflow: hidden;

  /* Fondo oscuro elegante con luz suave */
  background:
    radial-gradient(900px 400px at 50% 10%, rgba(255,255,255,0.08), transparent 60%),
    linear-gradient(135deg, #1e293b 0%, #111827 100%);

  color: #f9fafb;
  text-align: center;
  padding: 6rem 2rem;

  /* Sombra fuerte tipo â€œcard premiumâ€ */
  box-shadow: 0 30px 90px rgba(0,0,0,0.35);
}

.hero-overlay {
  position: absolute;
  inset: 0;
  background-color: rgba(0, 0, 0, 0.25);
}

.hero-content {
  position: relative;
  z-index: 10;
  max-width: 700px;
  margin: 0 auto;
}

/* Pills dorado largo (como en la imagen) */
.hero-icon {
  width: min(26rem, 90%);
  height: 4rem;
  margin: 0 auto 2rem;

  display: flex;
  align-items: center;
  justify-content: center;

  border-radius: 9999px;
  background: linear-gradient(135deg, #d4af37, #fbbf24);
  box-shadow: 0 18px 45px rgba(212,175,55,0.35);
  transition: transform 0.25s ease;
}

.hero-icon:hover {
  transform: scale(1.03);
}

.hero-icon .icon {
  color: #111827;
  width: 2.2rem;
  height: 2.2rem;
}

.hero h1 {
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 800;
  margin-bottom: 1rem;
  letter-spacing: -0.02em;
}

.hero h1 span {
  color: #d4af37;
}

.hero p {
  color: #e5e7eb;
  font-size: 1.1rem;
  max-width: 42rem;
  margin: 0 auto 2.2rem;
}

.hero-buttons {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 1rem;
}

/* BotÃ³n dorado */
.hero .btn-primary {
  background: linear-gradient(135deg, #d4af37, #fbbf24);
  color: #111827;
  padding: 0.85rem 1.8rem;
  border-radius: 9999px;
  font-weight: 700;
  text-decoration: none;
  transition: all 0.25s ease;
  box-shadow: 0 12px 28px rgba(212,175,55,0.25);
}

.hero .btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 18px 40px rgba(212,175,55,0.35);
}

/* BotÃ³n borde dorado */
.hero .btn-secondary {
  border: 2px solid #fbbf24;
  color: #fbbf24;
  padding: 0.85rem 1.8rem;
  border-radius: 9999px;
  font-weight: 700;
  text-decoration: none;
  transition: all 0.25s ease;
}

.hero .btn-secondary:hover {
  background: #fbbf24;
  color: #111827;
  transform: translateY(-2px);
  box-shadow: 0 10px 24px rgba(251,191,36,0.18);
}
